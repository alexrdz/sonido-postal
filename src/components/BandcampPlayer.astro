---
interface Props {
  albumId?: string;
  trackId: string;
}

const { albumId, trackId } = Astro.props;
const embedUrl = albumId
  ? `https://bandcamp.com/EmbeddedPlayer/album=${albumId}/size=small/bgcol=ffffff/linkcol=0687f5/track=${trackId}/transparent=true/`
  : `https://bandcamp.com/EmbeddedPlayer/track=${trackId}/size=small/bgcol=ffffff/linkcol=0687f5/transparent=true/`;
---

<iframe style="border: 0; width: 100%; height: 42px;" src={embedUrl} seamless
></iframe>
