---
import "../styles/global.css";
import Header from "../components/Header.astro";
import NewsletterSignup from "../components/NewsletterSignup.astro";
import LatestNewsletter from "../components/LatestNewsletter.astro";
import ArtistSpotlight from "../components/ArtistSpotlight.astro";
import ArchivesCTA from "../components/ArchivesCTA.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sonido Postal - Latinx Music Newsletter</title>
  </head>
  <body>
    <div class="accent-bar"></div>
    <div class="container">
      <Header />
      <div class="description">
        <p>
          From the underground scenes of Mexico City to the mainstream stages of
          Los Angeles, discover the artists, stories, and sounds shaping the
          future of Latinx music. Every week, we dive deep into the rhythms that
          move our communities and the voices that define our culture.
        </p>
      </div>
      <NewsletterSignup />
      <LatestNewsletter />
      <ArtistSpotlight />
      <ArchivesCTA />
    </div>
    <Footer />
  </body>
</html>
